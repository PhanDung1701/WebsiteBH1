@model IEnumerable<WebsiteBH.Models.ShoppingCartItem>
@using WebsiteBH.Common

@if (Model != null && Model.Any())
{
    <h3 class="d-flex justify-content-between align-items-center mb-3">
        <span>GIỎ HÀNG</span>
        <span class="badge bg-primary rounded-pill">@Model.Count()</span>
    </h3>

    var tongtien = decimal.Zero;

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Sản phẩm</th>
                        <th scope="col">Giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        tongtien += item.TotalPrice;
                        <tr>
                            <td>@item.ProductName x @item.Quantity</td>
                            <td>@Common.FormatNumber(item.TotalPrice, 0) đ</td>
                        </tr>
                    }
                    <tr class="table-active">
                        <td><strong>Tổng tiền</strong></td>
                        <td><strong>@Common.FormatNumber(tongtien, 0) đ</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}

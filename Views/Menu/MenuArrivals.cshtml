@model IEnumerable<WebsiteBH.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="col text-center">
            <div class="section_title new_arrivals_title">
                <h2>Sản phẩm mới</h2>
            </div>
        </div>
    </div>
    <div class="row align-items-center">
        <div class="col text-center">
            <div class="new_arrivals_sorting">
                <ul class="arrivals_grid_sorting clearfix button-group filters-button-group">
                    <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked" data-filter="*">All</li>
                    @foreach (var item in Model)
                    {
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center" data-filter=".@item.Alias">@item.Title</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="product-grid" data-isotope='{ "itemselector": ".product-item", "layoutmode": "fitrows" }'>
                @Html.Action("Partial_ItemsByCateId", "Product")
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <a href="/san-pham" class="btn btn-danger custom-btn-size" style="width: 138px; height: 40px;">Xem tất cả </a>
        </div>
    </div>

}